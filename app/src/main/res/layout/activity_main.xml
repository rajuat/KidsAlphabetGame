<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:background="@drawable/bg"
    tools:context="com.itservz.android.mayekid.MainActivity">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/e"
        android:id="@+id/mayekBoardButton"
        android:onClick="click"
        android:layout_below="@+id/cartoonBoardButton"
        android:layout_alignLeft="@+id/cartoonBoardButton"
        android:layout_alignStart="@+id/cartoonBoardButton" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="220dp"
        android:src="@drawable/noticeboard"
        android:id="@+id/noticeboard"
        android:onClick="click"
        android:layout_alignBottom="@+id/cartoonBoardButton"
        android:layout_toRightOf="@+id/cartoonBoardButton"
        android:layout_toEndOf="@+id/cartoonBoardButton"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/sound"
        android:id="@+id/soundOnOff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="click"/>


    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ratiya"
        android:id="@+id/cartoonBoardButton"
        android:onClick="click"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:src="@drawable/h7"
        android:id="@+id/masing"
        android:onClick="click"
        android:layout_below="@+id/cartoonBoardButton"
        android:layout_alignRight="@+id/soundOnOff"
        android:layout_alignEnd="@+id/soundOnOff" />

</RelativeLayout>
